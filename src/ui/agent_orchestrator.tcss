/* Estilos para o Agent Orchestrator */

/* Container principal */
#main {
    width: 100%;
    height: 100%;
    padding: 1;
}

/* Área de saída */
#output {
    border: solid;
    padding: 1;
    margin-top: 1;
    min-height: 10;
    height: auto;
}

/* Estilos para os RadioButtons */
RadioButton {
    padding: 0 1;
    width: auto;
    height: 1;
    border: tall;
    margin-right: 1;
}

/* Cabeçalho e rodapé */
Header {
    dock: top;
    height: 1;
}

Footer {
    dock: bottom;
    height: 1;
}
