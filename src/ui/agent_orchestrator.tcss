/* Estilos para o Agent Orchestrator */

/* Estilos globais */
* {
    scrollbar-color: $accent $surface;
}

/* Cabeçalho e rodapé */
Header {
    background: $accent;
    color: $text;
}

Footer {
    background: $accent;
    color: $text;
}

/* Container principal */
#main-container {
    width: 100%;
    height: 100%;
}

/* Estilo das abas */
Tabs {
    dock: top;
    height: 3;
}

TabPane {
    padding: 1;
}

/* Estilo para o painel Gen */
#gen-panel {
    width: 100%;
    height: 100%;
    padding: 1;
}

#gen-panel > Container {
    layout: horizontal;
    width: 100%;
    height: auto;
}

#prompt-input {
    width: 100%;
    min-height: 3;
    border: solid $accent;
    background: $surface;
    color: $text;
    padding: 1;
    margin-bottom: 1;
}

#model-options-container, #format-options-container {
    height: 10;
    border: solid $accent-lighten-1;
    margin: 1 1;
    width: 1fr;
}

#output-container {
    height: 20;
    border: solid $accent;
    margin: 1 0;
    overflow: auto;
}

#gen-button-container {
    margin: 1 0;
    content-align: center middle;
}

#gen-button {
    width: 20;
    background: $success;
    color: $text;
}

/* Estilos das listas de opções */
OptionList {
    background: $surface;
    border: none;
    height: 100%;
    width: 100%;
}

#model-label, #format-label {
    text-align: center;
    background: $primary-darken-2;
    color: $text;
    width: 100%;
    padding: 0 1;
}

/* Estilo para o visualizador de saída */
#markdown-output {
    min-height: 100%;
    background: $surface;
    color: $text;
}

#json-output {
    min-height: 100%;
    background: $surface;
    color: $text;
}

/* Estilos para o painel de carregamento */
#loading-overlay {
    background: $surface-darken-1 70%;
    align: center middle;
    width: 100%;
    height: 100%;
    layer: above;
}

#loading-container {
    background: $surface;
    width: 60%;
    padding: 2;
    border: solid $accent;
}

#loading-indicator {
    margin-bottom: 1;
}

#loading-info {
    layout: horizontal;
    width: 100%;
    padding: 1;
}

#clock {
    background: $primary-background;
    color: $text;
    border: solid $accent;
    margin-bottom: 1;
    padding: 1;
    content-align: center middle;
}

#model-info, #format-info {
    width: 1fr;
    margin-bottom: 1;
    text-align: center;
    background: $primary-background;
    border: solid $accent-lighten-2;
    padding: 1;
}

#output {
    background: $boost;
    color: $text;
    border: solid $accent;
    padding: 1;
    margin-top: 1;
    min-height: 10;
    height: auto;
} 